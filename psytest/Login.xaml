<Page x:Class="psytest.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:psytest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="225"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Логин" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Height="24" Margin="0,82,0,0" Foreground="Black"/>
        <TextBox x:Name="TextLogin" Grid.Column="2" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Margin="0,86,0,0"/>
        <Label Content="Пароль" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Height="24" Margin="0,114,0,0" Foreground="Black" />
        <PasswordBox x:Name="TextPassword" Grid.Column="2" Grid.Row="1" Margin="0,116,0,0" Height="18" VerticalAlignment="Top"/>
        <Button x:Name="ButtonEnter" Content="Вход" Grid.Column="2" Grid.Row="1" Margin="0,146,0,0" Background="Orange" VerticalAlignment="Top" Click="ButtonEnter_Click" Foreground="Black" BorderBrush="Black"/>
        <Button x:Name="BtnReg" Content="Регистрация" Background="Orange" Grid.Column="2" Grid.Row="1" Margin="0,170,0,0" VerticalAlignment="Top" Click="BtnReg_Click" Foreground="Black" BorderBrush="Black"/>
    </Grid>
</Page>
