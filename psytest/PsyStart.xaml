<Page x:Class="psytest.PsyStart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:psytest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PsyStart">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="225"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnNew" Content="Добавить тест" Grid.Column="2" Background="Orange" Grid.Row="1" VerticalAlignment="Top" Click="BtnNew_Click" Margin="0,74,0,0"/>
        <Button x:Name="BtnRed" Content="Редактировать тест" Grid.Column="2" Background="Orange" Grid.Row="1" VerticalAlignment="Top" Click="BtnRed_Click" Margin="0,115,0,0"/>
    </Grid>
</Page>
