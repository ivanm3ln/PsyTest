<Page x:Class="psytest.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:psytest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reg">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="225"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Логин" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Height="25"/>
        <TextBox x:Name="TextLogin" Grid.Column="2" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top"/>
        <Label Content="Пароль" Grid.Row="1" VerticalAlignment="Top" Height="26" Margin="0,30,0,0" Grid.Column="1" />
        <PasswordBox x:Name="TextPassword" Grid.Column="2" Grid.Row="1" Margin="0,30,0,0" Height="25" VerticalAlignment="Top"/>
        <Button x:Name="BtnRegistr" Content="Зарегистрироваться" Grid.Column="2" Background="Orange" Grid.Row="1" VerticalAlignment="Top" Click="BtnRegistr_Click" Margin="0,112,0,0"/>
    </Grid>
</Page>
